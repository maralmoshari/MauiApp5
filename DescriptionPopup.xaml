<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiApp5.DescriptionPopup"
               xmlns:controls="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar" >

    <StackLayout>
        <Frame 
        BorderColor="White" 
        Background="#FFCCE5" 
        WidthRequest="300" 
        HeightRequest="400" 
        CornerRadius="40" 
        Margin="0,20,0,5">
            <Entry 
             x:Name="DescriptiionEntry" 
             Placeholder=" Description" 
             PlaceholderColor="#FFFFFF" 
             FontSize="30" 
             HorizontalTextAlignment="Center" 
                />
        </Frame>



        <Image
            Grid.Row="6"
            Grid.Column="1"
         
            Source="Resources/Images/teck.png"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="EndAndExpand"
            Margin="0,10,5,5">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="SaveDescription"/>
            </Image.GestureRecognizers>
        </Image>









    </StackLayout>

</toolkit:Popup>