<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.HomePage"
             Title="HomePage"
             BackgroundColor="White">
    <ScrollView>
        <StackLayout>


        <Button
            Text="People"
            BackgroundColor="#FFCCFF"
            TextColor="White"
            FontSize="50"
            CornerRadius="40"
            WidthRequest="358"
            HeightRequest="93"
            Margin="0, 150, 0, 20"
            Clicked="peopleButton"/>
        <Button
            Text="Domain"
            BackgroundColor="#E5CCFF"
            TextColor="White"
            FontSize="50"
            CornerRadius="40"
            WidthRequest="358"
            HeightRequest="93"
            Margin="0, 30, 0, 20"
            Clicked="domainButton"/>
        <Button
            Text="Task"
            BackgroundColor="#CCCCFF"
            TextColor="White"
            FontSize="50"
            CornerRadius="40"
            WidthRequest="358"
            HeightRequest="93"
            Margin="0, 30, 0, 20"
            Clicked="taskButton"/>
        
        
        
        </StackLayout>
    </ScrollView>
</ContentPage>